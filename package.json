{
  "name": "tetris",
  "homepage": "https://ywongau.github.io/tetris",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "cross-env NODE_ENV=test nyc mocha --no-watch --reporter=spec",
    "dev": "cross-env NODE_ENV=test mocha --watch",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.12.1",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.7.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.8",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "gh-pages": "^3.1.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^16.4.0",
    "live-server": "^1.2.1",
    "mocha": "^8.2.1",
    "node-sass": "^4.0.0",
    "nyc": "^15.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "react-scripts": "4.0.1",
    "sinon": "^9.2.1",
    "web-vitals": "^0.2.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version",
    "last 2 safari version"
  ],
  "nyc": {
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "check-coverage": true,
    "instrument": true,
    "exclude": [
      "mocha",
      "src/stubs",
      "server/**",
      "**/**.test.{ts,tsx,js,jsx}"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
